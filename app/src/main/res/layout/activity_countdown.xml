<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_start_countdown_timer25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="startCountdownTimerFromAPI25"
            android:textAllCaps="false" />

        <EditText
            android:id="@+id/et_countdown_timer25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/input_time_length_s"
            android:inputType="number"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        style="@style/MatchWidthItem"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_start_countdown_timer26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="startCountdownTimerFromAPI26"
            android:textAllCaps="false" />

        <EditText
            android:id="@+id/et_countdown_timer26"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/input_time_length_s"
            android:inputType="number"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        style="@style/MatchWidthItem"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="log:" />

        <Button
            android:id="@+id/btn_clear_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="clear log"
            android:textAllCaps="false" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_log"
        style="@style/MatchWidthItem"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:fadeScrollbars="false"
        android:padding="5dp"
        android:scrollbars="vertical" />
</LinearLayout>